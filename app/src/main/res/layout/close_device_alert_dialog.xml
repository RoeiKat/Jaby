<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="24dp"
    >

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/color_white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This action will close the Monitor connection, \nthus disconnecting anyone that is currently watching.\nAre you sure you want to continue?"
        android:textColor="@color/color_white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        />

    <LinearLayout
        android:id="@+id/customButtonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_negative_button_background"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_positive_button_background"
            android:text="Close Monitor"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/color_red" />
    </LinearLayout>

</LinearLayout>
