<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Start Monitoring!"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/color_white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to call this device?"
        android:textColor="@color/color_white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        />

    <EditText
        android:id="@+id/dialogInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter device name"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:background="@drawable/edit_text_bottom_stroke"
        android:padding="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"/>

    <LinearLayout
        android:id="@+id/customButtonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_negative_button_background"
            android:text="Cancel"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/color_white" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_positive_button_background"
            android:text="Add Device"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/color_primary" />
    </LinearLayout>

</LinearLayout>
