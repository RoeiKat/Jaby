<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/et_focused_color" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/et_pressed_color" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/et_primary_color" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
